@model Camarillo_Tennis_Club.Models.SearchViewModel

@{
    ViewBag.Title = "Search";
}
<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">

    function ShowHideDiv() {
        var chkLocation = document.getElementById("chkLocation");
        var chkDate = document.getElementById("chkDate");
        var divLocation = document.getElementById("divLocation");
        divLocation.style.display = chkLocation.checked ? "block" : "none";
        divEventDate.style.display = chkDate.checked ? "block" : "none";
    }
</script>


<h2>Search</h2>
<div>
    <h4>Search Score Cards</h4>
   
  
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                @Html.Label("Search by using Location or Player Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="radio" id="chkLocation" name="SearchRadio" onclick="ShowHideDiv()" class="control-label col-md-2" />

                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group" id="divLocation" style="display:none">
                    @Html.LabelFor(model => model.SearchString, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SearchString, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SearchString, "", new { @class = "text-danger" })
                        <input type="submit" id="btnSubmit" value="Search Matches" class="btn btn-default" />

                    </div>
                </div>

            </div>
            <div class="form-horizontal">
                <hr />
                <div class="form-group">
                    @Html.Label("Search by using Event Date", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="radio" id="chkDate" name="SearchRadio" onclick="ShowHideDiv()" class="control-label col-md-2" />
                    </div>
                </div>
                <div class="form-horizontal">
                    <div class="form-group" id="divEventDate" style="display:none">
                        @Html.LabelFor(model => model.SearchDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SearchDate, "", new { @class = "text-danger" })
                            <input type="submit" id="btnSubmit" value="Search Matches" class="btn btn-default" />

                        </div>
                    </div>

                </div>

                <div class="col-md-10">
                    @Html.ActionLink("Back to List", "Index")
                </div>

            </div>
        </div>
    }
    </div>

