@model Camarillo_Tennis_Club.Models.Matches

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>

    <div>
        <table border="1" cellpadding="1" class="table table-border" width="400">
            <tr class="tr-head">
                <th colspan="4">
                    Tennis Scoreboard !!!!
                </th>
            </tr>
            <tr>
                <td colspan="2" class="td" width="200">
                    Event Location : 
                    @Html.DisplayFor(model => model.Location)
                </td>
                <td colspan="2" class="td"width="200">
                    Event Date : 
                    @Html.DisplayFor(model => model.MatchDate)
                </td>
            </tr>
            <tr>
                
                <td colspan="4" class="td">
                    <table cellspacing="2" class="table">
                        <tr>
                            <td>Player Names</td>

                            <th>Set -1</th>
                            <th>Set -2</th>
                            <th>Set -3</th>
                        </tr>
                        @{
                            for (int i = 0; i < Model.scoreList.Count; i++)
                            {
                                <tr>
                                    @{
                                        if (i == 0)
                                        {
                                            <td class="td">@Html.DisplayFor(model => model.Player1Name)</td>
                                        }
                                        else
                                        {
                                            <td class="td">@Html.DisplayFor(model => model.Player2Name)</td>
                                        }
                                    }
                                    <td class="td">@Html.DisplayFor(model => model.scoreList[i].Set1Score)</td>
                                    <td class="td">@Html.DisplayFor(model => model.scoreList[i].Set2Score)</td>
                                    <td class="td">@Html.DisplayFor(model => model.scoreList[i].Set3Score)</td>
                                </tr>
                                        }
                        }

                    </table>

                </td>
               

            </tr>
            <tr class="tr-head">
                <th colspan="4">
                    Winner - @Html.DisplayFor(model => model.WinnerName) !!!!!
                </th>

                @*<tr class="tr-head">
                <th colspan="4">
                    Winner -
                    @Html.DisplayFor(model => model.WinnerName) !!!!!

                </th>
            </tr>*@
</table>
    </div>
   
    <div class="form-actions no-color">
        @Html.ActionLink("Back to Home Page", "Index", "Home")
    </div>
        <div class="form-actions no-color">
            @Html.ActionLink("Back to Match List", "Index", "Matches")
        </div>
</div>